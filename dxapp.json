{
  "name": "eggd_additional_cnv_tasks",
  "title": "eggd_additional_cnv_tasks",
  "summary": "Adds length to CNV VCF and creates seg file for visualisation",
  "dxapi": "1.0.0",
  "version": "1.0.0",
  "properties": {
    "githubRelease": "1.0.0"
    },
  "inputSpec": [
    {
      "name": "vcf",
      "label": "Input VCF",
      "class": "file",
      "optional": false,
      "patterns": [
        "*vcf",
        "*vcf.gz"
      ],
      "help": "CNV VCF file containing END field."
    },
    {
      "name": "length_only",
      "label": "Only add length to VCF",
      "class": "boolean",
      "optional": true,
      "default": false,
      "help": "Boolean option if only vcf needed with added length"
    },
    {
      "name": "seg_only",
      "label": "Only create the seg file",
      "class": "boolean",
      "optional": true,
      "default": false,
      "help": "Boolean option if only seg file needed"
    }
  ],
  "outputSpec": [
    {
      "name": "output_vcf",
      "label": "VCF with added length",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "seg_file",
      "label": "Seg bed file",
      "class": "file",
      "optional": true,
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "minutes": 30
      }
    },
    "interpreter": "bash",
    "file": "src/eggd_additional_cnv_tasks.sh",
    "assetDepends": [
      {
        "name": "htslib",
        "project": "project-Fkb6Gkj433GVVvj73J7x8KbV",
        "folder": "/app_assets/htslib/htslib_v1.15.0",
        "version": "1.15.0"
      }
    ],
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0"
  },
  "developers":[
    "org-emee_1"
  ],
  "authorizedUsers": [
    "org-emee_1"
  ],
  "regionalOptions": {
    "aws:eu-central-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_v2_x2"
        }
      }
    }
  }
}
